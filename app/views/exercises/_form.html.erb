<%= form.fields_for :exercises do |exercise_form| %>
  <div class="field">
    <%= exercise_form.label :title, 'Exercise:' %>
    <%= exercise_form.text_field :title %>
  </div>
  <% unless exercise_form.object.nil? || exercise_form.object.new_record? %>
    <div class="field">
      <%= exercise_form.label :_destroy, 'Remove:' %>
      <%= exercise_form.check_box :_destroy %>
    </div>
  <% end %>
<% end %>
